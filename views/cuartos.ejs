<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Cuartos de Final</title>
  <link rel="stylesheet" href="/public/css/semifinales.css" />
  <style>
    .penalty-inputs {
      /* Le decimos que ocupe desde la primera a la última columna del grid */
      grid-column: 1 / -1; 
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 15px; /* Agrega un espacio superior para separarlo del marcador */
      padding-top: 10px; /* Un poco de espacio interno */
      border-top: 1px solid #3a3a5a; /* Una línea divisoria sutil */
    }

    .penalty-inputs label {
      margin-right: 10px;
      font-weight: bold;
      color: #00e0ff;
    }

    .penalty-inputs input[type="number"] {
      width: 55px;
      height: 45px;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid #ff4da6; /* Color diferente para distinguir */
      background-color: #0a192f;
      color: white;
      text-align: center;
      font-weight: bold;
      font-size: 1rem;
      margin: 0 4px;
      box-shadow: inset 0 0 5px #ff4da6;
    }

    /* Estilo adicional solo para los selects */
    select {
      width: 140px;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid #00bcd4;
      background-color: #0a192f;
      color: white;
      text-align: center;
      font-weight: bold;
      font-size: 1rem;
      box-shadow: inset 0 0 5px #00bcd4;
      transition: all 0.3s ease;
    }

    select:focus {
      outline: none;
      border-color: #ff4da6;
      box-shadow: 0 0 8px #ff4da6;
    }

    .match-card {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      background: #1e1e2f;
      border: 1px solid #333;
      border-radius: 12px;
      padding: 1rem 1.5rem;
      color: white;
      box-shadow: 0 0 10px rgba(0, 188, 212, 0.1);
    }

    .score-inputs {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .score-inputs input[type="number"] {
      width: 55px;
      height: 45px;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid #00bcd4;
      background-color: #0a192f;
      color: white;
      text-align: center;
      font-weight: bold;
      font-size: 1rem;
      margin: 0 4px;
      box-shadow: inset 0 0 5px #00bcd4;
      transition: all 0.3s ease;
    }

    .score-inputs input[type="number"]:focus {
      outline: none;
      border-color: #ff4da6;
      box-shadow: 0 0 8px #ff4da6;
    }

    .score-inputs span {
      margin: 0 0.4rem;
      font-size: 1.3rem;
      font-weight: bold;
      color: #00bcd4;
    }

    @media (max-width: 600px) {
      .match-card {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .score-inputs {
        margin: 1rem 0;
      }
    }
  </style>
</head>
<body>
   <main class="container">
    <h2>Cuartos de Final</h2>
    <form method="POST" action="/cuartos">
      <% for (let i = 1; i <= 4; i++) { %>
        <div class="match-card" id="match-<%= i %>">
          <select name="local<%= i %>" required>
            <% clasificados.forEach(jugador => { %>
              <option value="<%= jugador.id %>"><%= jugador.nombre %></option>
            <% }); %>
          </select>

          <div class="score-inputs">
            <input type="number" name="goles_local_cuartos_<%= i %>" required min="0" oninput="checkTie(<%= i %>)">
            <span>-</span>
            <input type="number" name="goles_visitante_cuartos_<%= i %>" required min="0" oninput="checkTie(<%= i %>)">
          </div>

          <select name="visitante<%= i %>" required>
            <% clasificados.forEach(jugador => { %>
              <option value="<%= jugador.id %>"><%= jugador.nombre %></option>
            <% }); %>
          </select>
          
          <div class="penalty-inputs" id="penales-<%= i %>" style="display: none;">
           
            <input type="number" name="penales_local_cuartos_<%= i %>" min="0">
            <span>-</span>
            <input type="number" name="penales_visitante_cuartos_<%= i %>" min="0">
          </div>
        </div>
      <% } %>
      
      <div class="submit-button">
        <button type="submit">confirmar ganadores</button>
      </div>
    </form>
  </main>

  <script>
    function checkTie(matchId) {
      const form = document.getElementById(`match-${matchId}`);
      const golesLocal = form.querySelector(`input[name="goles_local_cuartos_${matchId}"]`).value;
      const golesVisitante = form.querySelector(`input[name="goles_visitante_cuartos_${matchId}"]`).value;
      const penalesDiv = document.getElementById(`penales-${matchId}`);
      
      if (golesLocal !== '' && golesVisitante !== '' && golesLocal === golesVisitante) {
        penalesDiv.style.display = 'flex';
        penalesDiv.querySelectorAll('input').forEach(input => input.required = true);
      } else {
        penalesDiv.style.display = 'none';
        penalesDiv.querySelectorAll('input').forEach(input => input.required = false);
      }
    }
  </script>
</body>
</html>
