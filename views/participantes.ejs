                            <% } %>

                            <img src="/images/<%= participante.foto %>" alt="Foto de <%= participante.nombre %>" onerror="this.src='/images/default-avatar.png';">
                            <h2><%= participante.nombre %></h2>
                            <span class="category category-<%= participante.categoria.toLowerCase() %>">CategorÃ­a <%= participante.categoria %></span>
                            <div class="awards">
                                <span><i class="fas fa-star"></i> <%= participante.copas_liga %></span>
                                <span><i class="fas fa-trophy"></i> <%= participante.trofeos %></span>
                                <span><i class="fas fa-medal"></i> <%= participante.medallas %></span>
                                <span><i class="fas fa-medal silver-medal"></i> <%= participante.segundos_puestos %></span>
                            </div>
                            <div class="card-actions">
                                <button class="edit-btn" onclick="openEditModal('<%= participante.id %>')">Editar</button>
                                <button class="delete-btn" onclick="deleteParticipant('<%= participante.id %>')">Borrar</button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-participants">No hay participantes registrados. Â¡Agrega el primero!</p>
                <% } %>
            </div>
        </div>

        <button class="fab" id="add-participant-button">+</button>

        <!-- Formulario de ediciÃ³n/agregar (versiÃ³n original) -->
        <div id="participant-modal" class="modal">
            <div class="modal-content">
                <span class="close-button">&times;</span>
                <h2 id="modal-title">Agregar Nuevo Participante</h2>
                <form id="participant-form" enctype="multipart/form-data">
                    <input type="hidden" id="participant-id" name="id">

                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required>
                        
                    <label for="foto_file">Foto:</label>
                    <input type="file" id="foto_file" name="foto_file" accept="image/*">
                    <input type="hidden" id="existing_photo" name="foto">

                    <label for="categoria">CategorÃ­a:</label>
                    <select id="categoria" name="categoria" required>
                        <option value="A">A</option>
                        <option value="B">B</option>
                    </select>
                        
                    <label for="copas_liga">Liga:</label>
                    <input type="number" id="copas_liga" name="copas_liga" value="0" min="0" required>

                    <label for="trofeos">Torneo:</label>
                    <input type="number" id="trofeos" name="trofeos" value="0" min="0" required>

                    <label for="medallas">Copa:</label>
                    <input type="number" id="medallas" name="medallas" value="0" min="0" required>

                    <label for="segundos_puestos">Segundos Puestos:</label>
                    <input type="number" id="segundos_puestos" name="segundos_puestos" value="0" min="0" required>

                    <button type="submit" id="form-submit-button">Agregar Participante</button>
                </form>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const navContainer = document.querySelector('.nav-container');
            const navLinks = document.querySelectorAll('.nav-link');
            const navIndicator = document.querySelector('.nav-indicator');
                
            mobileMenuToggle.addEventListener('click', () => {
                navContainer.classList.toggle('active');
            });
                
            function moveIndicator(element) {
                if (element) {
                    const linkRect = element.getBoundingClientRect();
                    const navRect = document.querySelector('.nav-links').getBoundingClientRect();
                        
                    navIndicator.style.width = `${linkRect.width}px`;
                    navIndicator.style.left = `${linkRect.left - navRect.left}px`;
                    navIndicator.style.opacity = '1';
                }
            }
                
            const activeLink = document.querySelector('.nav-link.active');
            moveIndicator(activeLink);
                
            navLinks.forEach(link => {
                link.addEventListener('mouseenter', () => {
                    moveIndicator(link);
                });
                    
                link.addEventListener('mouseleave', () => {
                    moveIndicator(activeLink);
                });
                    
                link.addEventListener('click', () => {
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                    moveIndicator(link);
                        
                    if (window.innerWidth <= 768) {
                        navContainer.classList.remove('active');
                    }
                });
            });
        });

        const modal = document.getElementById('participant-modal');
        const modalTitle = document.getElementById('modal-title');
        const form = document.getElementById('participant-form');
        const submitButton = document.getElementById('form-submit-button');
        const participantIdInput = document.getElementById('participant-id');
        const participantsGrid = document.getElementById('participants-list');
        const existingPhotoInput = document.getElementById('existing_photo');

        document.getElementById('add-participant-button').addEventListener('click', () => {
            form.reset();
            participantIdInput.value = '';
            existingPhotoInput.value = '';
            modalTitle.innerText = 'Agregar Nuevo Participante';
            submitButton.innerText = 'Agregar Participante';
            modal.style.display = 'block';
        });

        document.querySelector('.close-button').addEventListener('click', () => {
            modal.style.display = 'none';
        });

        window.addEventListener('click', e => e.target == modal && (modal.style.display = 'none'));

        function openEditModal(id) {
            const card = document.getElementById(`card-${id}`);
            if (!card) return;

            form.reset();
            form.querySelector('#participant-id').value = id;
            form.querySelector('#nombre').value = card.dataset.nombre;
            form.querySelector('#categoria').value = card.dataset.categoria;
            form.querySelector('#copas_liga').value = card.dataset.copas_liga;
            form.querySelector('#trofeos').value = card.dataset.trofeos;
            form.querySelector('#medallas').value = card.dataset.medallas;
            form.querySelector('#segundos_puestos').value = card.dataset.segundos_puestos;
            existingPhotoInput.value = card.dataset.foto;

            modalTitle.innerText = 'Actualizar EstadÃ­sticas';
            submitButton.innerText = 'Actualizar';
            modal.style.display = 'block';
        }

        form.addEventListener('submit', async (event) => {
            event.preventDefault();
                
            const id = participantIdInput.value;
            const isEditing = !!id;
            const url = isEditing ? `/participantes/actualizar/${id}` : '/participantes';

            const formData = new FormData(form);
                
            try {
                const response = await fetch(url, {
                    method: 'POST',
                    body: formData,
                });
                    
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Error en la solicitud: ${response.status} - ${errorText}`);
                }
                    
                const result = await response.json();
                    
                if (isEditing) {
                    updateParticipantCard(id, result.participante);
                    alert('Participante actualizado con Ã©xito.');
                } else {
                    addNewParticipantCard(result.participante);
                    alert('Participante agregado con Ã©xito.');
                }
                    
                modal.style.display = 'none';
                form.reset();
            } catch (error) {
                console.error('Error:', error);
                alert('No se pudo completar la operaciÃ³n: ' + error.message);
            }
        });

        async function deleteParticipant(id) {
            if (!confirm('Â¿EstÃ¡s seguro de que quieres eliminar a este participante? Esta acciÃ³n no se puede deshacer.')) {
                return;
            }

            try {
                const response = await fetch(`/participantes/eliminar/${id}`, {
                    method: 'DELETE',
                });
                    
                const result = await response.json();

                if (response.ok) {
                    const cardToRemove = document.getElementById(`card-${id}`);
                    if (cardToRemove) cardToRemove.remove();
                        
                    if (document.querySelectorAll('.participant-card').length === 0) {
                        participantsGrid.innerHTML = '<p class="no-participants">No hay participantes registrados. Â¡Agrega el primero!</p>';
                    }
                        
                    alert(result.message);
                } else {
                    throw new Error(result.error || 'Error al eliminar');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('No se pudo eliminar al participante.');
            }
        }
            
        function updateParticipantCard(id, data) {
            const card = document.getElementById(`card-${id}`);
            if (!card) return;

            card.dataset.nombre = data.nombre;
            card.dataset.foto = data.foto;
            card.dataset.categoria = data.categoria;
            card.dataset.copas_liga = data.copas_liga;
            card.dataset.trofeos = data.trofeos;
            card.dataset.medallas = data.medallas;
            card.dataset.segundos_puestos = data.segundos_puestos;
                
            card.querySelector('h2').innerText = data.nombre;
            card.querySelector('img').src = `/images/${data.foto}`;
            const categorySpan = card.querySelector('.category');
            categorySpan.innerText = `CategorÃ­a ${data.categoria}`;
            categorySpan.className = `category category-${data.categoria.toLowerCase()}`;
                
            const awardsSpans = card.querySelectorAll('.awards span');
            awardsSpans[0].innerHTML = `<i class="fas fa-star"></i> ${data.copas_liga}`;
            awardsSpans[1].innerHTML = `<i class="fas fa-trophy"></i> ${data.trofeos}`;
            awardsSpans[2].innerHTML = `<i class="fas fa-medal"></i> ${data.medallas}`;
            awardsSpans[3].innerHTML = `<i class="fas fa-medal silver-medal"></i> ${data.segundos_puestos}`;
        }

        function addNewParticipantCard(participante) {
            const noParticipantsMessage = participantsGrid.querySelector('p');
            if (noParticipantsMessage) noParticipantsMessage.remove();

            const newCardHtml = `
                <div class="participant-card" id="card-${participante.id}" 
                    data-id="${participante.id}" 
                    data-nombre="${participante.nombre}" 
                    data-foto="${participante.foto}"
                    data-categoria="${participante.categoria}"
                    data-trofeos="${participante.trofeos}"
                    data-medallas="${participante.medallas}"
                    data-segundos_puestos="${participante.segundos_puestos}"
                    data-copas_liga="${participante.copas_liga}">

                    <img src="/images/${participante.foto}" alt="Foto de ${participante.nombre}" onerror="this.src='/images/default-avatar.png';">
                    <h2>${participante.nombre}</h2>
                    <span class="category category-${participante.categoria.toLowerCase()}">CategorÃ­a ${participante.categoria}</span>
                    <div class="awards">
                        <span><i class="fas fa-star"></i> ${participante.copas_liga}</span>
                        <span><i class="fas fa-trophy"></i> ${participante.trofeos}</span>
                        <span><i class="fas fa-medal"></i> ${participante.medallas}</span>
                        <span><i class="fas fa-medal silver-medal"></i> ${participante.segundos_puestos}</span>
                    </div>
                    <div class="card-actions">
                        <button class="edit-btn" onclick="openEditModal('${participante.id}')">Editar</button>
                        <button class="delete-btn" onclick="deleteParticipant('${participante.id}')">Borrar</button>
                    </div>
                </div>
            `;
            participantsGrid.insertAdjacentHTML('beforeend', newCardHtml);
        }

        window.openEditModal = openEditModal;
        window.deleteParticipant = deleteParticipant;
    </script>
</body>
