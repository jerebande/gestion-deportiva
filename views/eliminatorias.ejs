<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Torneo de Eliminación Directa</title>
    <style>
        /* Agregado para un mejor manejo de tamaños */
        html {
            box-sizing: border-box;
        }
        *, *:before, *:after {
            box-sizing: inherit;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0a192f;
            color: #ffffff;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* --- MODIFICACIÓN: Centrado Vertical y Horizontal --- */
            justify-content: center; /* Centra el contenido verticalmente */
            min-height: 100vh;      /* Asegura que el body ocupe toda la altura de la pantalla */
        }

        h1, h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
            text-shadow: 0 0 5px rgba(0, 224, 255, 0.5);
        }

        .container {
            width: 100%;
            max-width: 1200px;
            background-color: #1a1a2e;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 188, 212, 0.1); 
            margin-bottom: 30px;
            border: 1px solid #3a3a5a; 
        }

        /* --- INICIO: NUEVO DISEÑO PARA AGREGAR PARTICIPANTES --- */
        .add-participants-section {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .participants-form {
            width: 100%;
            max-width: 500px;
            margin-bottom: 20px;
        }
        
        /* Nuevo estilo para separar el input y el botón */
        .add-participant-row {
            display: flex;
            align-items: center;
            gap: 10px; /* Espacio entre el input y el botón */
        }

        .add-participants-form-content {
            width: 100%;
        }

        .participant-input {
            flex-grow: 1; /* Permite que el input ocupe todo el espacio disponible */
        }

        .participant-input input {
            width: 100%;
            padding: 15px 25px; 
            border: 1px solid #3a3a5a;
            border-radius: 50px; /* Forma de píldora */
            font-size: 16px;
            background-color: #0a192f;
            color: white;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .participant-input input::placeholder {
            color: #8892b0;
        }

        .participant-input input:focus {
            outline: none;
            border-color: #ff4da6;
            box-shadow: 0 0 10px rgba(255, 77, 166, 0.4);
        }

        /* Botón de agregar con estilos ajustados */
        .add-participant {
            background-color: #ff4da6;
            color: white;
            border: none;
            padding: 15px 30px; /* Relleno ajustado para el nuevo diseño */
            border-radius: 50px; 
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
        }

        .add-participant:hover {
            background-color: #e60073;
            transform: scale(1.05); 
        }
        /* --- FIN: NUEVO DISEÑO --- */

        .phase-container {
            margin-bottom: 40px;
        }
        
        #participants-list {
            margin-top: 20px;
        }

        #participants-list h3 {
            color: #00bcd4;
        }

        #participants-ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }
        
        #participants-ul li {
            background-color: #2a2a4a;
            padding: 8px 12px;
            border-radius: 6px;
            border: 1px solid #3a3a5a;
            font-weight: bold;
        }

        .tournament-options {
            margin: 20px 0;
            padding: 15px;
            background-color: #1e1e2f;
            border-radius: 8px;
            border: 1px solid #3a3a5a;
            text-align: center;
        }

        .tournament-options label {
            margin-right: 15px;
            font-weight: bold;
            color: #00bcd4;
        }

        .tournament-options select {
            width: 140px;
            padding: 10px;
            border-radius: 10px;
            border: 1px solid #00bcd4;
            background-color: #0a192f;
            color: white;
            font-weight: bold;
            font-size: 1rem;
            box-shadow: inset 0 0 5px #00bcd4;
            transition: all 0.3s ease;
        }

        .tournament-options select:focus {
            outline: none;
            border-color: #ff4da6;
            box-shadow: 0 0 8px #ff4da6;
        }

        .bracket {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 40px;
            flex-wrap: wrap;
        }

        .round {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            flex: 1;
            min-width: 250px;
        }

        .round h3 {
            color: #ff4da6;
            text-align: center;
            border-bottom: 2px solid #ff4da6;
            padding-bottom: 10px;
        }

        .match-card {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            background: #1e1e2f;
            border: 1px solid #333;
            border-radius: 12px;
            padding: 1rem 1.5rem;
            color: white;
            box-shadow: 0 0 10px rgba(0, 188, 212, 0.1);
        }

        .match-card span {
            font-weight: bold;
            color: #fff;
        }
        
        .match-card > span:first-child {
            text-align: right;
        }

        .score-inputs {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 5px;
        }

        .score-inputs input[type="number"] {
            width: 55px;
            height: 45px;
            padding: 10px;
            border-radius: 10px;
            border: 1px solid #00bcd4;
            background-color: #0a192f;
            color: white;
            text-align: center;
            font-weight: bold;
            font-size: 1rem;
            box-shadow: inset 0 0 5px #00bcd4;
            transition: all 0.3s ease;
        }

        .score-inputs input[type="number"]:focus {
            outline: none;
            border-color: #ff4da6;
            box-shadow: 0 0 8px #ff4da6;
        }

        .score-inputs span {
            margin: 0 0.4rem;
            font-size: 1.3rem;
            font-weight: bold;
            color: #00bcd4;
        }
        
        .penalty-inputs {
            grid-column: 1 / -1;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 15px;
            padding-top: 10px;
            border-top: 1px solid #3a3a5a;
            display: none;
        }

        .penalty-inputs span {
            margin: 0;
            font-weight: bold;
            color: #00e0ff;
        }
        
        .penalty-inputs input[type="number"] {
            width: 55px;
            height: 45px;
            padding: 10px;
            border-radius: 10px;
            border: 1px solid #ff4da6;
            background-color: #0a192f;
            color: white;
            text-align: center;
            font-weight: bold;
            font-size: 1rem;
            margin: 0 4px;
            box-shadow: inset 0 0 5px #ff4da6;
        }

        .submit-button {
            text-align: center;
            margin-top: 20px;
        }

        button {
            background-color: #00bcd4;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
            margin: 5px;
        }

        button:hover {
            background-color: #0096a8;
            transform: translateY(-2px);
        }

        button.secondary {
            background-color: #ff4da6;
        }

        button.secondary:hover {
            background-color: #e60073;
        }

        .winner {
            font-weight: bold;
            color: #00e0ff;
        }

        .hidden {
            display: none !important;
        }
        
        #champion-display h3, #runner-up-display h3 {
            color: #00e0ff;
        }
        
        #champion-name {
            color: #ff4da6;
            text-shadow: 0 0 5px rgba(255, 77, 166, 0.5);
            font-size: 1.5rem;
        }
        
        #runner-up-name {
            color: #00bcd4;
            font-size: 1.2rem;
        }

        /* Estilos responsivos */
        @media (max-width: 768px) {
            .bracket {
                flex-direction: column;
                align-items: center;
            }
            .round {
                margin-bottom: 30px;
            }
        }
        
        @media (max-width: 600px) {
            .match-card {
                grid-template-columns: 1fr;
                text-align: center;
            }
            .match-card > span:first-child {
                text-align: center;
            }
            .score-inputs {
                margin: 1rem 0;
            }
            .add-participant-row {
                flex-direction: column;
            }
            .add-participant {
                width: 100%;
            }
        }
        
        .match-result {
            font-weight: bold;
            color: #00e0ff;
        }
        
        .penalties-result {
            color: #ff4da6;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Torneo de Eliminación Directa</h1>
        
        <div class="phase-container">
            <div class="add-participants-section">
                <h2>Agregar Participantes</h2>
                <form id="participants-form" class="participants-form" onsubmit="addParticipant(event)">
                    <div class="add-participant-row">
                        <div class="participant-input">
                            <input type="text" id="new-participant" name="participant" placeholder="Nombre del participante" required>
                        </div>
                        <button type="button" class="add-participant" onclick="addParticipant()">Agregar</button>
                    </div>
                </form>
            </div>
            
            <div id="participants-list">
                <h3>Participantes:</h3>
                <ul id="participants-ul"></ul>
            </div>
            
            <div class="tournament-options">
                <label for="start-phase">Iniciar torneo desde:</label>
                <select id="start-phase">
                    <option value="quarters">Cuartos de Final</option>
                    <option value="semis">Semifinales</option>
                    <option value="final">Final</option>
                </select>
            </div>
            
            <div class="submit-button">
                <button type="button" onclick="startTournament()">Iniciar Torneo</button>
            </div>
        </div>
    </div>
    
    <div class="container" id="tournament-bracket" style="display: none;">
        <h2>Eliminatorias</h2>
        
        <div class="bracket">
            <div class="round" id="quarter-finals">
                <h3>Cuartos de Final</h3>
                <% for(let i = 1; i <= 4; i++) { %>
                    <div class="match-card" id="qf-match-<%= i %>">
                        <span id="qf-local-<%= i %>">Por definir</span>
                        <div class="score-inputs">
                            <input type="number" id="qf-local-goals-<%= i %>" min="0" oninput="checkTie('qf', <%= i %>)">
                            <span>-</span>
                            <input type="number" id="qf-visitor-goals-<%= i %>" min="0" oninput="checkTie('qf', <%= i %>)">
                        </div>
                        <span id="qf-visitor-<%= i %>">Por definir</span>
                        <div class="penalty-inputs" id="qf-penalties-<%= i %>">
                            <span>Penales:</span>
                            <input type="number" id="qf-local-penalties-<%= i %>" min="0">
                            <span>-</span>
                            <input type="number" id="qf-visitor-penalties-<%= i %>" min="0">
                        </div>
                    </div>
                <% } %>
            </div>
            
            <div class="round" id="semi-finals">
                <h3>Semifinales</h3>
                <% for(let i = 1; i <= 2; i++) { %>
                    <div class="match-card" id="sf-match-<%= i %>">
                        <span id="sf-local-<%= i %>">Ganador QF <%= i*2-1 %></span>
                        <div class="score-inputs">
                            <input type="number" id="sf-local-goals-<%= i %>" min="0" oninput="checkTie('sf', <%= i %>)">
                            <span>-</span>
                            <input type="number" id="sf-visitor-goals-<%= i %>" min="0" oninput="checkTie('sf', <%= i %>)">
                        </div>
                        <span id="sf-visitor-<%= i %>">Ganador QF <%= i*2 %></span>
                        <div class="penalty-inputs" id="sf-penalties-<%= i %>">
                            <span>Penales:</span>
                            <input type="number" id="sf-local-penalties-<%= i %>" min="0">
                            <span>-</span>
                            <input type="number" id="sf-visitor-penalties-<%= i %>" min="0">
                        </div>
                    </div>
                <% } %>
            </div>
            
            <div class="round" id="final">
                <h3>Final</h3>
                <div class="match-card" id="final-match">
                    <span id="final-local">Ganador SF 1</span>
                    <div class="score-inputs">
                        <input type="number" id="final-local-goals" min="0" oninput="checkTie('final', 1)">
                        <span>-</span>
                        <input type="number" id="final-visitor-goals" min="0" oninput="checkTie('final', 1)">
                    </div>
                    <span id="final-visitor">Ganador SF 2</span>
                    <div class="penalty-inputs" id="final-penalties">
                        <span>Penales:</span>
                        <input type="number" id="final-local-penalties" min="0">
                        <span>-</span>                                                        
                        <input type="number" id="final-visitor-penalties" min="0">
                    </div>
                    </div>
            </div>
        </div>
        
        <div class="submit-button">
            <button type="button" onclick="calculateResults()">Calcular Resultados</button>
            <button type="button" class="secondary" onclick="getxd()">Reiniciar Torneo</button>
        </div>
    </div>
    
    <div class="container" id="results-container" style="display: none;">
        <h2>Resultados Finales</h2>
        <div id="champion-display">
            <h3>Campeón: <span id="champion-name"></span></h3>
        </div>
        <div id="runner-up-display">
            <h3>Subcampeón: <span id="runner-up-name"></span></h3>
        </div>
        <div class="submit-button">                                                                                          
            <button type="button" onclick="irhome()">ir al inicio</button>
        </div>
    </div>
    
    <script>
        const participants = [];
        let tournamentPhase = 'quarters';
        let quarterWinners = [];
        let semiFinalWinners = [];
        
        function addParticipant(e) {
            if (e) e.preventDefault();
            const input = document.getElementById('new-participant');
            const name = input.value.trim();
            if (name && !participants.includes(name)) {
                participants.push(name);
                input.value = '';
                updateParticipantsList();
            }
        }
        
        function updateParticipantsList() {
            const ul = document.getElementById('participants-ul');
            ul.innerHTML = '';
            participants.forEach(participant => {
                const li = document.createElement('li');
                li.textContent = participant;
                ul.appendChild(li);
            });
        }
        
        function startTournament() {
            tournamentPhase = document.getElementById('start-phase').value;
            let minParticipants, maxParticipants;
            switch(tournamentPhase) {
                case 'final': minParticipants = 2; maxParticipants = 2; break;
                case 'semis': minParticipants = 4; maxParticipants = 4; break;
                case 'quarters': default: minParticipants = 4; maxParticipants = 8; break;
            }
            if (participants.length < minParticipants || participants.length > maxParticipants) {
                alert(`Se necesitan entre ${minParticipants} y ${maxParticipants} participantes para iniciar desde ${getPhaseName(tournamentPhase)}`);
                return;
            }
            document.querySelector('.phase-container').parentElement.style.display = 'none';
            document.getElementById('tournament-bracket').style.display = 'block';
            const shuffledParticipants = [...participants].sort(() => Math.random() - 0.5);
            switch(tournamentPhase) {
                case 'quarters': setupQuarterFinals(shuffledParticipants); break;
                case 'semis': setupSemiFinals(shuffledParticipants); break;
                case 'final': setupFinal(shuffledParticipants); break;
            }
            document.getElementById('quarter-finals').classList.toggle('hidden', tournamentPhase !== 'quarters');
            document.getElementById('semi-finals').classList.toggle('hidden', tournamentPhase === 'final');
        }
        
        function getPhaseName(phase) {
            switch(phase) {
                case 'quarters': return 'Cuartos de Final';
                case 'semis': return 'Semifinales';
                case 'final': return 'Final';
                default: return '';
            }
        }
        
        function setupQuarterFinals(participants) {
            for (let i = 1; i <= 4; i++) {
                const localIndex = (i-1)*2, visitorIndex = (i-1)*2 + 1;
                if (localIndex < participants.length) document.getElementById(`qf-local-${i}`).textContent = participants[localIndex];
                if (visitorIndex < participants.length) {
                    document.getElementById(`qf-visitor-${i}`).textContent = participants[visitorIndex];
                } else {
                    document.getElementById(`qf-visitor-${i}`).textContent = "BYE";
                    document.getElementById(`qf-visitor-goals-${i}`).value = 0;
                    document.getElementById(`qf-visitor-goals-${i}`).disabled = true;
                }
            }
        }
        
        function setupSemiFinals(participants) {
            for (let i = 1; i <= 2; i++) {
                const localIndex = (i-1)*2, visitorIndex = (i-1)*2 + 1;
                document.getElementById(`sf-local-${i}`).textContent = participants[localIndex] || "Por definir";
                document.getElementById(`sf-visitor-${i}`).textContent = participants[visitorIndex] || "Por definir";
            }
            document.getElementById('quarter-finals').style.display = 'none';
        }
        
        function setupFinal(participants) {
            document.getElementById('final-local').textContent = participants[0] || "Por definir";
            document.getElementById('final-visitor').textContent = participants[1] || "Por definir";
            document.getElementById('quarter-finals').style.display = 'none';
            document.getElementById('semi-finals').style.display = 'none';
        }
        
        function checkTie(phase, matchNumber) {
            let localGoals, visitorGoals, penaltiesDiv;
            if (phase === 'final') {
                localGoals = document.getElementById('final-local-goals');
                visitorGoals = document.getElementById('final-visitor-goals');
                penaltiesDiv = document.getElementById('final-penalties');
            } else {
                localGoals = document.getElementById(`${phase}-local-goals-${matchNumber}`);
                visitorGoals = document.getElementById(`${phase}-visitor-goals-${matchNumber}`);
                penaltiesDiv = document.getElementById(`${phase}-penalties-${matchNumber}`);
            }
            if (localGoals.value !== '' && localGoals.value === visitorGoals.value) {
                penaltiesDiv.style.display = 'flex';
            } else {
                penaltiesDiv.style.display = 'none';
            }
        }
        
        function getWinner(local, visitor, localGoals, visitorGoals, localPenalties, visitorPenalties) {
            if (localGoals > visitorGoals) return local;
            if (visitorGoals > localGoals) return visitor;
            return localPenalties > visitorPenalties ? local : visitor;
        }
        
        function updateMatchResult(phase, matchNumber, localName, visitorName, localGoals, visitorGoals, localPenalties, visitorPenalties) {
            let localElement, visitorElement, scoreInputs, penaltiesDiv, matchCard;
            
            if (phase === 'final') {
                matchCard = document.getElementById('final-match');
                localElement = document.getElementById('final-local');
                visitorElement = document.getElementById('final-visitor');
                scoreInputs = matchCard.querySelector('.score-inputs');
                penaltiesDiv = document.getElementById('final-penalties');
            } else {
                matchCard = document.getElementById(`${phase}-match-${matchNumber}`);
                localElement = document.getElementById(`${phase}-local-${matchNumber}`);
                visitorElement = document.getElementById(`${phase}-visitor-${matchNumber}`);
                scoreInputs = matchCard.querySelector('.score-inputs');
                penaltiesDiv = document.getElementById(`${phase}-penalties-${matchNumber}`);
            }
            
            if (penaltiesDiv) {
                penaltiesDiv.style.display = 'none';
            }
            
            let resultText = `${localGoals} - ${visitorGoals}`;
            
            if (localGoals === visitorGoals && (localPenalties > 0 || visitorPenalties > 0)) {
                resultText += ` <span class="penalties-result">(${localPenalties}-${visitorPenalties})</span>`;
            }
            
            scoreInputs.innerHTML = `<span class="match-result">${resultText}</span>`;
            
            const winner = getWinner(localName, visitorName, localGoals, visitorGoals, localPenalties, visitorPenalties);
            if (localName === winner) {
                localElement.classList.add('winner');
                visitorElement.classList.remove('winner');
            } else {
                visitorElement.classList.add('winner');
                localElement.classList.remove('winner');
            }
        }

        function calculateResults() {
            if (tournamentPhase === 'quarters') {
                quarterWinners = [];
                for (let i = 1; i <= 4; i++) {
                    const local = document.getElementById(`qf-local-${i}`).textContent;
                    const visitor = document.getElementById(`qf-visitor-${i}`).textContent;
                    if (visitor === "BYE") {
                        quarterWinners.push(local);
                        continue;
                    }
                    const localGoals = parseInt(document.getElementById(`qf-local-goals-${i}`).value) || 0;
                    const visitorGoals = parseInt(document.getElementById(`qf-visitor-goals-${i}`).value) || 0;
                    const localPenalties = parseInt(document.getElementById(`qf-local-penalties-${i}`).value) || 0;
                    const visitorPenalties = parseInt(document.getElementById(`qf-visitor-penalties-${i}`).value) || 0;
                    
                    updateMatchResult('qf', i, local, visitor, localGoals, visitorGoals, localPenalties, visitorPenalties);
                    
                    quarterWinners.push(getWinner(local, visitor, localGoals, visitorGoals, localPenalties, visitorPenalties));
                }
                document.getElementById('sf-local-1').textContent = quarterWinners[0];
                document.getElementById('sf-visitor-1').textContent = quarterWinners[1];
                document.getElementById('sf-local-2').textContent = quarterWinners[2];
                document.getElementById('sf-visitor-2').textContent = quarterWinners[3];
                tournamentPhase = 'semis';
                document.getElementById('semi-finals').classList.remove('hidden');
                return;
            }
            
            if (tournamentPhase === 'semis') {
                semiFinalWinners = [];
                for (let i = 1; i <= 2; i++) {
                    const local = document.getElementById(`sf-local-${i}`).textContent;
                    const visitor = document.getElementById(`sf-visitor-${i}`).textContent;
                    const localGoals = parseInt(document.getElementById(`sf-local-goals-${i}`).value) || 0;
                    const visitorGoals = parseInt(document.getElementById(`sf-visitor-goals-${i}`).value) || 0;
                    const localPenalties = parseInt(document.getElementById(`sf-local-penalties-${i}`).value) || 0;
                    const visitorPenalties = parseInt(document.getElementById(`sf-visitor-penalties-${i}`).value) || 0;
                    
                    updateMatchResult('sf', i, local, visitor, localGoals, visitorGoals, localPenalties, visitorPenalties);
                    
                    semiFinalWinners.push(getWinner(local, visitor, localGoals, visitorGoals, localPenalties, visitorPenalties));
                }
                document.getElementById('final-local').textContent = semiFinalWinners[0];
                document.getElementById('final-visitor').textContent = semiFinalWinners[1];
                tournamentPhase = 'final';
                document.getElementById('final').classList.remove('hidden');
                return;
            }
            
            const finalLocal = document.getElementById('final-local').textContent;
            const finalVisitor = document.getElementById('final-visitor').textContent;
            const finalLocalGoals = parseInt(document.getElementById('final-local-goals').value) || 0;
            const finalVisitorGoals = parseInt(document.getElementById('final-visitor-goals').value) || 0;
            const finalLocalPenalties = parseInt(document.getElementById('final-local-penalties').value) || 0;
            const finalVisitorPenalties = parseInt(document.getElementById('final-visitor-penalties').value) || 0;
            
            updateMatchResult('final', 1, finalLocal, finalVisitor, finalLocalGoals, finalVisitorGoals, finalLocalPenalties, finalVisitorPenalties);
            
            let champion = getWinner(finalLocal, finalVisitor, finalLocalGoals, finalVisitorGoals, finalLocalPenalties, finalVisitorPenalties);
            let runnerUp = champion === finalLocal ? finalVisitor : finalLocal;

            document.getElementById('champion-name').textContent = champion;
            document.getElementById('runner-up-name').textContent = runnerUp;
